{% extends 'layouts/base.twig' %}

{% block title %} Новини {% endblock %}

{% block content %}

    <!-- Preloader -->
    <div class="preloader">
        <img class="preloader-img" src="{{ url("images/loader/anahata.svg") }}" width="300px" height="300px" align="middle">
    </div>

    <!-- Button To Top -->
    <a class="btn-top">
        <i class="fa fa-arrow-up"></i>
    </a>

    <!-- Main Image -->
    <header id="Main">
        <div class="fullScreenImg-NewsPage parallax">
            <div class="News-main-text-box">
                <h1 class="News-main-text-h1">
                    Анахата Новини
                </h1>
                <ul class="News-main-text-ul">
                    <li style="padding-top: 5px;">
                        <a class="News-main-text-a" href="{{ url() }}">Головна</a>
                    </li>
                    <i class="fas fa-circle News-arrow" aria-hidden="true"></i>
                    <li style="padding-top: 5px;">
                        <a class="News-main-text-a News-active" href="{{ url('news') }}">Новини</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    {{ include('parts/navigation.twig') }}

    <!-- News -->
    {% if news is not empty %}
    <section class="pt-5 pb-5" id="News">
        <div class="container">
            <div class="row">
                {{ showInfoBlock() }}
                <div class="col-lg-10 offset-lg-1 text-center">
                    {% for post in news %}
                        <div class="news-container pb-5">
                            <!-- News Author -->
                            <h5 class="news-author pt-3">Anahata</h5>
                            <!-- News Title -->
                            <h3 class="news-title pb-1">{{ post.title}}</h3>
                            <!-- News Date Publish -->
                            <p class="news-date pb-3"><i class="far fa-calendar-alt"></i> {{ post.created_at | date("d-m-Y") }}</p>
                            <!-- News Image -->
                            <img class="img-fluid" src="{{ post.photo }}">
                            <!-- News Text -->
                            <p class="news-text pt-5">
                                {{ postBodyPreview(post.body, 450) }}
                            </p>
                            <!-- News Read More Btn -->
                            <a class="news-readMore" href="{{ url('news', post.slug) }}"> Читати далі... </a>
                        </div>

                        <!-- Separator -->
                        <hr class="mb-5">
                    {% endfor %}



                    <!-- Pagination -->
                    {{ links | raw }}
                </div>
            </div>
        </div>
    </section>
    {% else %}
        <section class="pt-5 pb-5" id="News">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1 text-center">
                        <h3>Новини відсутні</h3>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}


    <!-- Contacts -->
    <section class="py-5 bg-dark" id="Contacts">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 mb-5 mb-md-0 wow fadeIn" data-wow-duration=".7s" data-wow-delay="0.2s">
                    <div class="card py-4">
                        <a href="" class="contacts-a" data-toggle="modal" data-target="#myModal">
                            <div class="card-body text-center">
                                <h5 class="text-uppercase contacts-h5">Phone</h5>
                                <i class="fa fa-phone contacts-i"></i>
                                <div class="contacts-text">+380 99 328 0450</div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 mb-5 mb-md-0 wow fadeIn" data-wow-duration=".7s" data-wow-delay="0.4s">
                    <div class="card py-4">
                        <a href="" class="contacts-a" data-toggle="modal" data-target="#myModal">
                            <div class="card-body text-center">
                                <h5 class="text-uppercase contacts-h5">Email</h5>
                                <i class="fas fa-envelope contacts-i"></i>
                                <div class="contacts-text">airin.niki@gmail.com</div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 mb-5 mb-md-0 wow fadeIn" data-wow-duration=".7s" data-wow-delay="0.6s">
                    <div class="card py-4">
                        <a href="" class="contacts-a" data-toggle="modal" data-target="#myModal">
                            <div class="card-body text-center">
                                <h5 class="text-uppercase contacts-h5">Address</h5>
                                <i class="fas fa-map-marked-alt contacts-i"></i>
                                <div class="contacts-text">Луцьк, вул. Винниченка, 67А</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="pt-5 social d-flex justify-content-center">
                <a href="https://ru-ru.facebook.com/AnahataLutsk/" class="mx-2 social-icons wow fadeIn"
                   data-wow-duration=".7s" data-wow-delay="0.8s">
                    <i class="fab fa-facebook-f social-i"></i>
                </a>
                <a href="https://www.instagram.com/anahata.yoga.lutsk/" class="mx-2 social-icons wow fadeIn"
                   data-wow-duration=".7s" data-wow-delay="1.0s">
                    <i class="fab fa-instagram social-i"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Modal Window -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Я тут</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <iframe src="https://snazzymaps.com/embed/101332" width="100%" height="505px"
                            style="border:none;"></iframe>
                </div>
            </div>
        </div>
    </div>

{% endblock %}