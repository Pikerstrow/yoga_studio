{% extends 'layouts/admin.twig' %}

{% block title %} Анахата йога - студія. Панель адміністратора. {% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 admin-welcome">
            <h2 class="admin-welcome-h2">
                Вітаємо в панелі адміністратора, <span> {{ adminGet('login') }}!</span>
            </h2>
            <hr>
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-lg-6 col-xl-3 mb-3">
                    <a class="admin-button-a" href="{{ url("admin/news/create") }}">
                        <div class="admin-index-page-buttons d-flex justify-content-between align-items-center">
                            <div class="col-4 icon-container text-center">
                                <i class="fa fa-file-alt fa-5x"></i>
                            </div>
                            <div class="col-8 text-container text-center">
                                Додати новину
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 col-lg-6 col-xl-3 mb-3">
                    <a class="admin-button-a" href="{{ url("admin/news") }}">
                        <div class="admin-index-page-buttons d-flex justify-content-between align-items-center">
                            <div class="col-4 icon-container text-center">
                                <i class="fas fa-search fa-5x"></i>
                            </div>
                            <div class="col-8 text-container text-center">
                                Переглянути новини
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 col-lg-6 col-xl-3 mb-3">
                    <a class="admin-button-a" href="{{ url('admin/profile') }}">
                        <div class="admin-index-page-buttons d-flex justify-content-between align-items-center">
                            <div class="col-4 icon-container text-center">
                                <i class="far fa-user fa-5x"></i>
                            </div>
                            <div class="col-8 text-container text-center">
                                Переглянути профіль
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 col-lg-6 col-xl-3 mb-3">
                    <a class="admin-button-a" href="{{ url('admin/profile/password_edit') }}">
                        <div class="admin-index-page-buttons d-flex justify-content-between align-items-center">
                            <div class="col-4 icon-container text-center">
                                <i class="fas fa-key fa-5x"></i>
                            </div>
                            <div class="col-8 text-container text-center">
                                Змінити пароль
                            </div>
                        </div>
                    </a>
                </div>

